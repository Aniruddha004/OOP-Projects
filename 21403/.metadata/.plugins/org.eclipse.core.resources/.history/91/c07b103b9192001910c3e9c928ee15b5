#include <iostream>
using namespace std;

int main() {
float a,b;
char z;

 do{
	 cout<<"Enter first number, operator, second number:"<<endl;
	 cin>>a>>z>>b;
	 switch(z)
	 {
	 case '+':
		 a=a+b;
		 cout<<"Ans is:"<<a<<endl;
		 break;

	 case '-':

		 a=a-b;
		 cout<<"Ans is:"<<a<<endl;
		 break;

	 case '*':
		 a=a*b;
		 cout<<"Ans is:"<<a<<endl;
		 break;

	 case '/':

		 a=a/b;
		 cout<<"Ans is:"<<a<<endl;
		 break;
	 default:
		 cout<<"You have entered wrong choice"<<endl;

	 }
	 cout<<"Do another (y/n)?";
			 cin>>z;

 }while(z!='n');
	return 0;
}
