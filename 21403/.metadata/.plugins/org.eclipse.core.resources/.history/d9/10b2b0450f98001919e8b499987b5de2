#include <iostream>
using namespace std;

int main() {
int n;
cout<<"Enter number:"<<endl;
cin>>n;
int i,j,z,y,count=1,temp=0;
z=n;
for(i=1;i;i++)
{
count*=10;
z=z/count;
temp++;
if(z==0)
	break;

}
for(i=1;i;i++)
{
count*=10;
y=z/count;
z=z%count;
}













	return 0;
}
